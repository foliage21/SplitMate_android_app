<?xml version="1.0" encoding="utf-8"?>
<!-- 根部的ScrollView用于适配小屏幕设备 -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2">

    <LinearLayout
        android:id="@+id/mainLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/AddRemoveTenantCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/AddRemoveTenantImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80000000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:layout_margin="16dp"
                    android:layout_gravity="top|start"
                    android:background="@drawable/rounded_corner_bg">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/manage_accounts_24px"
                        app:tint="@android:color/black"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/AddRemoveTenantText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add/Remove Tenant"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/note1" />
                </LinearLayout>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/TenantUsageRecordsCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/TenantUsageRecordsImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80000000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:layout_margin="16dp"
                    android:layout_gravity="top|start"
                    android:background="@drawable/rounded_corner_bg">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/receipt_long_24px"
                        app:tint="@android:color/black"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/TenantUsageRecordsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tenant Usage Records"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/note1" />
                </LinearLayout>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/ManagePermissionsCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ManagePermissionsImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80000000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:layout_margin="16dp"
                    android:layout_gravity="top|start"
                    android:background="@drawable/rounded_corner_bg">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/rule_settings_24px"
                        app:tint="@android:color/black"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/ManagePermissionsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage Permissions"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/note1" />
                </LinearLayout>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/DeviceManagementCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/DeviceManagementImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="285dp"
                    android:background="#80000000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:layout_margin="16dp"
                    android:layout_gravity="top|start"
                    android:background="@drawable/rounded_corner_bg">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/sensors_24px"
                        app:tint="@android:color/black"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/DeviceManagementText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pi Management"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/note1" />
                </LinearLayout>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>