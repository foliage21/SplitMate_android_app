<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etTenantEmail"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="16sp"
        android:maxLines="1"
        android:layout_gravity="center"
        android:background="@drawable/rounded_edittext" />

    <EditText
        android:id="@+id/etTenantUsername"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Username"
        android:textSize="16sp"
        android:maxLines="1"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext" />

    <EditText
        android:id="@+id/etTenantPassword"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:maxLines="1"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext" />

    <Spinner
        android:id="@+id/spinnerTenantProperty"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:entries="@array/property_options" />

    <ImageView
        android:id="@+id/imgTenantProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/btnSelectImage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Select Image"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_white_black"
        android:textColor="@android:color/black" />

</LinearLayout>