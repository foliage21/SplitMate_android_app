<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Raspberry Pi"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <!-- List of Pi Devices -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/piRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- Input for New House ID (for moving Pi) -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter New House ID">

        <EditText
            android:id="@+id/inputNewHouseId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Buttons for Moving/Deleting Pi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Move Pi Button -->
        <Button
            android:id="@+id/movePiButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move Pi"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:layout_marginRight="16dp" />

        <!-- Delete Pi Button -->
        <Button
            android:id="@+id/deletePiButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Pi"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>