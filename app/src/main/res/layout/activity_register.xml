<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_register_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/et_register_email"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Email"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_edittext"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/et_register_user"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Username"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:inputType="text"
            android:background="@drawable/rounded_edittext"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/et_register_password"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Password"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/et_register_confirm_password"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Confirm Password"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext"
            android:layout_gravity="center_horizontal" />

        <RadioGroup
            android:id="@+id/rg_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">

            <RadioButton
                android:id="@+id/rb_tenant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tenant"
                android:textSize="20dp"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rb_landlord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Landlord"
                android:textSize="20dp"
                android:layout_marginStart="20dp" />
        </RadioGroup>

        <EditText
            android:id="@+id/et_register_houseId"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="House ID"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:maxLines="1"
            android:inputType="number"
            android:background="@drawable/rounded_edittext"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btn_upload_photo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Upload Video"
            android:textColor="@android:color/black"
            android:background="@drawable/btn_white_black"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Get Verification Code"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_black_white"
            android:layout_marginTop="5dp" />

        <EditText
            android:id="@+id/et_register_confirmation_code"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Enter Verification Code"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:inputType="text"
            android:background="@drawable/rounded_edittext"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btn_confirm_signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Confirm registration"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_black_white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp" />

    </LinearLayout>
</ScrollView>